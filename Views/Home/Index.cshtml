@{
	ViewData["Title"] = "Home Page";
}

<div class="hero-wrapper position-relative overflow-hidden" style="margin-top: -1.5rem; width: 100vw; margin-left: calc(-50vw + 50%); background-color: #000;">

	<div class="hero-section d-flex align-items-center justify-content-center text-center text-white"
		 style="min-height: 85vh; background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1665041982909-8a86864a1e49?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover; background-position: center;">

		<div class="container px-4">
			<h6 class="text-uppercase tracking-widest text-info mb-3 fw-bold" style="letter-spacing: 4px;">#1 Gaming Collection Hub</h6>

			<h1 class="display-1 fw-bold mb-4">
				Showcase Your <br />
				<span class="text-warning">Legendary</span> Journey
			</h1>

			<p class="lead mb-5 mx-auto opacity-75" style="max-width: 800px; font-size: 1.4rem; line-height: 1.6;">
				Every gamer has those three titles that defined their life. Create your collection, share your passion, and earn your place among the community legends.
			</p>

			<div class="d-flex justify-content-center gap-3">
				<a asp-controller="Collection" asp-action="All" class="btn btn-info btn-lg px-5 py-3 fw-bold rounded-pill text-white shadow-lg hero-btn">
					GET STARTED NOW
				</a>
				@if (User.Identity?.IsAuthenticated == false)
				{
					<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill fw-bold hero-btn-outline">
						JOIN THE HUB
					</a>
				}
			</div>
		</div>
	</div>

	<div class="container-fluid bg-dark py-5 border-top border-secondary shadow-lg">
		<div class="container">
			<div class="row text-center text-white g-4">
				<div class="col-md-4">
					<div class="p-3">
						<i class="bi bi-collection-play text-info fs-1 mb-3"></i>
						<h4 class="fw-bold">Curate</h4>
						<p class="text-muted small">Explain why your top 3 titles earned their spot in your personal hall of fame.</p>
					</div>
				</div>
				<div class="col-md-4 border-start border-end border-secondary">
					<div class="p-3">
						<i class="bi bi-star-fill text-warning fs-1 mb-3"></i>
						<h4 class="fw-bold">Earn Stars</h4>
						<p class="text-muted small">Get recognized by others and increase your rank from Newcomer to Legend.</p>
					</div>
				</div>
				<div class="col-md-4">
					<div class="p-3">
						<i class="bi bi-people-fill text-info fs-1 mb-3"></i>
						<h4 class="fw-bold">Discover</h4>
						<p class="text-muted small">Browse legendary collections and find your next favorite gaming experience.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
