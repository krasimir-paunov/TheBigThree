@model CollectionDetailsViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">@Model.Title</h1>
        <p class="lead">
            Curated by <strong>@Model.Publisher</strong> | ⭐ @Model.TotalStars Stars
        </p>

        @if (User.Identity?.IsAuthenticated == true && User.Identity.Name?.Split('@')[0] != Model.Publisher)
        {
            @if (ViewBag.IsStarred == true)
            {
                <form asp-controller="Collection" asp-action="RemoveStar" asp-route-id="@Model.Id" method="post" class="mt-3">
                    <button type="submit" class="btn btn-outline-danger btn-lg shadow-sm">
                        <i class="bi bi-star"></i> Remove Star
                    </button>
                </form>
            }
            else
            {
                <form asp-controller="Collection" asp-action="Star" asp-route-id="@Model.Id" method="post" class="mt-3">
                    <button type="submit" class="btn btn-warning btn-lg shadow-sm">
                        <i class="bi bi-star-fill"></i> Give a Star
                    </button>
                </form>
            }
        }
        else if (User.Identity?.IsAuthenticated == true && User.Identity.Name?.Split('@')[0] == Model.Publisher)
        {
            <p class="text-muted small italic">This is your collection!</p>
        }

        <hr />
    </div>

    <div class="row">
        @foreach (var game in Model.Games)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@game.ImageUrl" class="card-img-top p-3" style="height: 300px; object-fit: contain;" alt="@game.Title">
                    <div class="card-body">
                        <h4 class="card-title text-primary">@game.Title</h4>
                        <span class="badge bg-secondary mb-3">@game.Genre</span>
                        <p class="card-text text-justify" style="font-size: 0.95rem; line-height: 1.6;">
                            @game.Description
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5 mb-5">
        <a asp-action="All" class="btn btn-outline-secondary btn-lg px-5">Back to All Collections</a>
    </div>
</div>