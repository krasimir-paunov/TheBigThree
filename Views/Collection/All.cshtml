@model IEnumerable<CollectionAllViewModel>

@{
    ViewBag.Title = "The Big Three - All Collections";
}

<h2 class="text-center mt-4">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    @if (!Model.Any())
    {
        <div class="col-12 text-center">
            <h3 class="text-muted">No collections found. Be the first to create one!</h3>
        </div>
    }

    @foreach (var collection in Model)
    {
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card mb-4 shadow-sm hover-effect border-0" style="width: 22rem;">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold mb-3">@collection.Title</h5>

                    <p class="card-text mb-2">
                        <strong>Publisher:</strong> @collection.Publisher
                        <span class="badge rounded-pill bg-info text-dark ms-1" style="font-size: 0.75rem;">
                            @collection.PublisherRank
                        </span>
                    </p>

                    <p class="card-text mb-3">
                        <strong>Total Stars:</strong> <span class="text-warning fw-bold">⭐ @collection.TotalStars</span>
                    </p>

                    <div class="d-flex justify-content-between mb-4 px-2">
                        @foreach (var imgUrl in collection.GameImages)
                        {
                            <div class="bg-light rounded p-1" style="width: 30%; height: 65px;">
                                <img src="@imgUrl" class="img-fluid h-100 w-100" style="object-fit: contain;" alt="Game Image">
                            </div>
                        }
                    </div>

                    <div class="d-grid">
                        <a asp-controller="Collection" asp-action="Details" asp-route-id="@collection.Id" class="btn btn-info text-white shadow-sm">
                            <i class="bi bi-info-circle"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-5 mb-5">
    @if (User.Identity?.IsAuthenticated == true && ViewBag.UserHasCollection == false)
    {
        <a asp-controller="Collection" asp-action="Add" class="btn btn-primary btn-lg shadow">
            <i class="bi bi-plus-circle"></i> Create Your Own Big Three
        </a>
    }
    else if (User.Identity?.IsAuthenticated == false)
    {
        <div class="alert alert-secondary d-inline-block px-5">
            <p class="mb-0">Login to create your own "Big Three"!</p>
        </div>
    }
</div>

    <style>
        .hover-effect:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
    </style>