@model CollectionFormViewModel

@{
    ViewBag.Title = "Edit Your Big Three";
}

<div class="hub-background overflow-hidden" style="width: 100vw; margin-left: calc(-50vw + 50%);">
    <div class="container py-5">

        <div class="text-center mb-5">
            <h2 class="hub-title mb-0">@ViewBag.Title</h2>
            <div class="badge bg-warning text-dark shadow-sm">Refine Your Legacy</div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <form asp-action="Edit" asp-route-id="@Context.Request.RouteValues["id"]" method="post" class="glass-form-card shadow-lg">

                    <div class="mb-5">
                        <label asp-for="Title" class="form-label text-info fw-bold small text-uppercase">Collection Title</label>
                        <input asp-for="Title" class="form-control form-control-lg glass-input" placeholder="e.g., My Favorite RPGs" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <h4 class="text-white mb-4 border-bottom border-secondary border-opacity-25 pb-2">The Games</h4>

                    <div class="row g-4">
                        @for (int i = 0; i < Model.Games.Count; i++)
                        {
                            <div class="col-md-4">
                                <div class="game-edit-slot h-100">
                                    <h5 class="text-warning fw-bold mb-3">Game #@(i + 1)</h5>

                                    <div class="mb-3">
                                        <label asp-for="@Model.Games[i].Title" class="form-label small text-muted">Title</label>
                                        <input asp-for="@Model.Games[i].Title" class="form-control glass-input" />
                                        <span asp-validation-for="@Model.Games[i].Title" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="@Model.Games[i].ImageUrl" class="form-label small text-muted">Image URL</label>
                                        <input asp-for="@Model.Games[i].ImageUrl" class="form-control glass-input" />
                                        <span asp-validation-for="@Model.Games[i].ImageUrl" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="@Model.Games[i].GenreId" class="form-label small text-muted">Genre</label>
                                        <select asp-for="@Model.Games[i].GenreId" class="form-select glass-input"
                                                asp-items="@(new SelectList(Model.Games[i].Genres, "Id", "Name"))">
                                            <option value="">-- Select Genre --</option>
                                        </select>
                                        <span asp-validation-for="@Model.Games[i].GenreId" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-0">
                                        <label asp-for="@Model.Games[i].Description" class="form-label small text-muted">Why is it in your Big Three?</label>
                                        <textarea asp-for="@Model.Games[i].Description" class="form-control glass-input" rows="4"></textarea>
                                        <span asp-validation-for="@Model.Games[i].Description" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-5 pt-4 border-top border-secondary border-opacity-25">
                        <button type="submit" class="btn btn-info btn-lg px-5 rounded-pill fw-bold shadow-sm">
                            <i class="bi bi-cloud-arrow-up-fill me-2"></i> Save Changes
                        </button>
                        <div class="mt-3">
                            <a asp-action="Mine" class="btn btn-link text-muted text-decoration-none small">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}