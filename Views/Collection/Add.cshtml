@model CollectionFormViewModel

@{
    ViewBag.Title = "Create Your Big Three";
}

<div class="hub-background overflow-hidden" style="width: 100vw; margin-left: calc(-50vw + 50%);">
    <div class="container py-3">

        <div class="text-center mb-4">
            <h3 class="hub-title mb-1" style="font-size: 1.5rem;">@ViewBag.Title</h3>
            <div class="badge bg-info text-dark px-2 py-1 shadow-sm" style="font-size: 0.7rem;">Start Your Legacy</div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-11">
                <form asp-action="Add" method="post" class="glass-form-card shadow-lg p-4">

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label text-info fw-bold small text-uppercase" style="letter-spacing: 1px;">Collection Title</label>
                        <input asp-for="Title" class="form-control glass-input" placeholder="e.g., My Favorite RPGs" />
                        <span asp-validation-for="Title" class="text-danger fw-bold small"></span>
                    </div>

                    <h5 class="text-white mb-3 border-bottom border-secondary border-opacity-25 pb-2 opacity-75">The Games</h5>

                    <div class="row g-3">
                        @for (int i = 0; i < Model.Games.Count; i++)
                        {
                            <div class="col-md-4">
                                <div class="game-edit-slot p-3">
                                    <h6 class="text-warning fw-bold mb-3 border-bottom border-secondary border-opacity-25 pb-1">Game #@(i + 1)</h6>

                                    <div class="mb-3">
                                        <label asp-for="@Model.Games[i].Title" class="form-label small fw-bold text-light">Title</label>
                                        <input asp-for="@Model.Games[i].Title" class="form-control glass-input" placeholder="Game Title..." />
                                        <span asp-validation-for="@Model.Games[i].Title" class="text-danger fw-bold small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="@Model.Games[i].ImageUrl" class="form-label small fw-bold text-light">Image URL</label>
                                        <input asp-for="@Model.Games[i].ImageUrl" class="form-control glass-input" placeholder="https://..." />
                                        <span asp-validation-for="@Model.Games[i].ImageUrl" class="text-danger fw-bold small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="@Model.Games[i].GenreId" class="form-label small fw-bold text-light">Genre</label>
                                        <select asp-for="@Model.Games[i].GenreId" class="form-select glass-input"
                                                asp-items="@(new SelectList(Model.Games[i].Genres, "Id", "Name"))">
                                            <option value="">-- Select Genre --</option>
                                        </select>
                                        <span asp-validation-for="@Model.Games[i].GenreId" class="text-danger fw-bold small"></span>
                                    </div>

                                    <div class="mb-0">
                                        <label asp-for="@Model.Games[i].Description" class="form-label small fw-bold text-light">Why is it in your Big Three?</label>
                                        <textarea asp-for="@Model.Games[i].Description" class="form-control glass-input" rows="3" placeholder="Describe the greatness..."></textarea>
                                        <span asp-validation-for="@Model.Games[i].Description" class="text-danger fw-bold small"></span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-4 pt-3 border-top border-secondary border-opacity-25">
                        <button type="submit" class="btn btn-info rounded-pill px-5 fw-bold shadow-sm">
                            <i class="bi bi-plus-circle-fill me-1"></i> Create Collection
                        </button>
                        <div class="mt-2">
                            <a asp-action="All" class="btn btn-link text-muted text-decoration-none small opacity-75">
                                <i class="bi bi-x"></i> Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}