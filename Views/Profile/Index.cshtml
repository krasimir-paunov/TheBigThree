@model IEnumerable<CollectionAllViewModel>

@{
    ViewBag.Title = "My Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 text-center p-4">
                <div class="card-body">
                    <img src="https://ui-avatars.com/api/?name=@ViewBag.Username&background=0D6EFD&color=fff&size=128"
                         class="rounded-circle mx-auto mb-3 shadow-sm"
                         alt="Profile Avatar">

                    <h2 class="fw-bold">@ViewBag.Username</h2>

                    <p class="mb-3">
                        <span class="badge rounded-pill bg-info text-dark px-3 py-2">
                            <i class="bi bi-trophy-fill me-1"></i> @ViewBag.Rank
                        </span>
                    </p>

                    <hr class="my-4" />

                    <div class="row justify-content-center">
                        <div class="col-6 border-end">
                            <h4 class="text-warning fw-bold mb-0">⭐ @ViewBag.TotalStars</h4>
                            <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Stars Earned</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-primary fw-bold mb-0">@Model.Count()</h4>
                            <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Starred by Me</small>
                        </div>
                    </div>

                    <div class="mt-4 d-grid gap-2">
                        <a asp-controller="Collection" asp-action="Mine" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Manage My Collection
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">My Favorites</h2>
                <span class="text-muted">Collections you've starred</span>
            </div>

            @if (!Model.Any())
            {
                <div class="card border-dashed bg-light text-center p-5">
                    <div class="card-body">
                        <i class="bi bi-star-half display-1 text-muted mb-3"></i>
                        <h4>Your favorites list is empty</h4>
                        <p class="text-muted">Explore the community and star your favorite Big Three collections!</p>
                        <a asp-controller="Collection" asp-action="All" class="btn btn-outline-primary mt-2">Explore Collections</a>
                    </div>
                </div>
            }
            else
            {
                <div class="row row-cols-1 g-3">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <a asp-controller="Collection" asp-action="Details" asp-route-id="@item.Id"
                               class="card h-100 shadow-sm text-decoration-none text-dark hover-effect border-0">
                                <div class="card-body d-flex align-items-center p-3">
                                    <div class="me-3 bg-light rounded p-2" style="width: 80px; height: 80px;">
                                        <img src="@item.GameImages.FirstOrDefault()"
                                             class="img-fluid h-100 w-100"
                                             style="object-fit: contain;"
                                             alt="Collection Thumb">
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1 fw-bold">@item.Title</h5>
                                        <p class="mb-0 text-muted small">
                                            <i class="bi bi-person-circle"></i> Curated by @item.Publisher
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <span class="h5 text-warning fw-bold mb-0">⭐ @item.TotalStars</span>
                                        <div class="text-muted small">Stars</div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-effect:hover {
        background-color: #f8f9fa;
        transform: translateY(-2px);
        transition: all 0.2s ease-in-out;
    }

    .border-dashed {
        border: 2px dashed #dee2e6;
    }
</style>