@using TheBigThree.Web.ViewModels
@model ProfileViewModel

@{
    ViewBag.Title = "PLAYER PROFILE";
}

<div class="hub-background overflow-hidden" style="width: 100vw; margin-left: calc(-50vw + 50%);">
    <div class="container py-4">
        <div class="text-center mb-5">
            <h2 class="hub-title mb-0">@ViewBag.Title</h2>
            <div class="badge bg-info text-dark shadow-sm">User Dashboard</div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="profile-card text-center shadow-lg h-100">
                    <div class="profile-avatar-circle fw-bold shadow">
                        @Model.Username.Substring(0, Math.Min(2, Model.Username.Length)).ToUpper()
                    </div>

                    <h3 class="text-white fw-bold mb-1">@Model.Username</h3>
                    <p class="text-muted small mb-3">@Model.Email</p>

                    <div class="mb-4">
                        <span class="badge rounded-pill bg-info text-dark px-3 py-2 fw-bold shadow-sm">
                            <i class="bi bi-trophy-fill me-1"></i> @Model.Rank
                        </span>
                    </div>

                    <hr class="border-secondary opacity-25">

                    <div class="row mt-4">
                        <div class="col-6 border-end border-secondary border-opacity-25">
                            <h4 class="text-warning fw-bold mb-0">@Model.TotalStarsEarned</h4>
                            <div class="text-muted small text-uppercase" style="font-size: 0.65rem;">Stars Earned</div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-info fw-bold mb-0">@Model.FavoriteCollections.Count()</h4>
                            <div class="text-muted small text-uppercase" style="font-size: 0.65rem;">Starred</div>
                        </div>
                    </div>

                    <div class="d-grid mt-5 pt-3">
                        <a asp-controller="Collection" asp-action="Mine" class="btn btn-outline-info rounded-pill fw-bold shadow-sm py-2">
                            <i class="bi bi-pencil-square me-2"></i> Manage Collection
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="profile-card shadow-lg h-100">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="text-white fw-bold mb-0">My Favorites</h4>
                        <span class="text-muted small fst-italic">Collections you've starred</span>
                    </div>

                    @if (!Model.FavoriteCollections.Any())
                    {
                        <div class="text-center py-5">
                            <div class="opacity-25 mb-3">
                                <i class="bi bi-star" style="font-size: 4rem;"></i>
                            </div>
                            <p class="text-muted">You haven't starred any collections yet.</p>
                            <a asp-controller="Collection" asp-action="All" class="btn btn-sm btn-outline-warning rounded-pill px-4 mt-2 fw-bold">Explore Hub</a>
                        </div>
                    }
                    else
                    {
                        <div class="favorites-scroll-area">
                            @foreach (var fav in Model.FavoriteCollections)
                            {
                                <div class="favorite-item p-3 mb-3 d-flex align-items-center justify-content-between shadow-sm">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3 bg-dark rounded p-1" style="width: 70px; height: 45px;">
                                            <img src="@fav.GameImages.FirstOrDefault()"
                                                 class="img-fluid h-100 w-100 rounded"
                                                 style="object-fit: contain;"
                                                 alt="Game Preview" />
                                        </div>
                                        <div>
                                            <h6 class="text-white fw-bold mb-0">@fav.Title</h6>
                                            <small class="text-muted">by @fav.Publisher</small>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="text-warning fw-bold">⭐ @fav.TotalStars</span>
                                        <div class="mt-1">
                                            <a asp-controller="Collection" asp-action="Details" asp-route-id="@fav.Id"
                                               class="btn btn-sm btn-link text-info p-0 text-decoration-none fw-bold">
                                                View <i class="bi bi-chevron-right small"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>