@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-semibold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="bi bi-person-circle me-1 text-info"></i> Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white fw-semibold border-0">
                    <i class="bi bi-box-arrow-right me-1 text-danger"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-semibold px-3" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus-fill me-1"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white fw-semibold px-3" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-door-open-fill me-1"></i> Login
            </a>
        </li>
    }
</ul>