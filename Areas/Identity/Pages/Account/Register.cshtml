@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 glass-form-card">
            <section>
                <form id="register" method="post">
                    <h1 class="hub-title text-center mb-4">@ViewData["Title"]</h1>
                    <h2 class="h5 text-white-50 text-center mb-4">Create a new account.</h2>
                    <hr class="border-secondary mb-4" />

                    <div asp-validation-summary="ModelOnly" class="text-danger-glow mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control glass-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-white-50">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger-glow"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control glass-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-white-50">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger-glow"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control glass-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="text-white-50">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger-glow"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg">Register</button>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}