@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 glass-form-card">
            <section>
                <form id="account" method="post">
                    <h1 class="hub-title text-center mb-4">@ViewData["Title"]</h1>
                    <h2 class="h5 text-white-50 text-center mb-4">Use a local account to log in.</h2>
                    <hr class="border-secondary mb-4" />

                    <div asp-validation-summary="ModelOnly" class="text-danger-glow mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control glass-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-white-50">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger-glow"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control glass-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-white-50">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger-glow"></span>
                    </div>

                    <div class="checkbox mb-3 text-start ps-1">
                        <label asp-for="Input.RememberMe" class="form-label text-white-50">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg">Log in</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}